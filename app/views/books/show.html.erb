 <p clas="notice"><%= flash[:notice] %>
 </p>
<% end %>

<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
  <h2>User info</h2>
  <p><%= image_tag @books.user.get_profile_image(100,100) %></p>
  <table class="table">
      <tbody><tr></tr>
      <tr>
          <th>Name</th>
          <th><%= @books.user.name %></th>
      </tr>
      <tr>
          <th>Introduction</th>
          <th><%= @books.user.introduction %></th>
      </tr>
      </tbody>
  </table>

  
   <div class="row">
    <%= link_to edit_user_path(@books.user), class: "btn btn-outline-secondary btn-block" do%>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  
  
  <h2 class="mt-3">New book</h2>

  <div>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj form being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
