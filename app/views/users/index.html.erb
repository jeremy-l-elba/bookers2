<% if flash[:notice] %>
 <p clas="notice"><%= flash[:notice] %>
 </p>
<% end %>


<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class ="col-md-3">
     <%= render 'list' %>

   <div class="row">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
    </div>

  <h2 class="mt-3">New book</h2>

  <div>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj form being saved:
  <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>
  </div>

  <%= form_with model: @book, url: books_path, method: :post do |f| %>
  
  <div class="form-group"><h4>Title</h4>
      <%= f.text_field :title %>
  </div>
  <div class="form-group"><h4>Opinion</h4>
      <%= f.text_area :body %>
  </div>
  <div class="form-group">
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
  </div>
  <% end %>
  </div>
    
    <div class ="col-md-8 offset-md-1">
    <h1>Users</h1>
<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
         <% @users.each do |user| %>
        <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
    </tbody>
</table>
     </div>
</div>
</div>



