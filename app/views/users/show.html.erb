

<% if flash[:notice] %>
 <p clas="notice"><%= flash[:notice] %>
 </p>
<% end %>


<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class ="col-md-3">
     
  <h2>User info</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <table class="table">
      <tbody><tr></tr>
      <tr>
          <th>Name</th>
          <th><%= @user.name %></th>
      </tr>
      <tr>
          <th>Introduction</th>
          <th><%= @user.introduction %></th>
      </tr>
      </tbody>
  </table>

   <div class="row">
    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
    </div>

   <h2 class="mt-3">New book</h2>
    <%= render 'list2', book: @book %>
   </div>
    
   <div class ="col-md-8 offset-md-1">
    <%= render 'list3', books: @books %>
   </div>
</div>
</div>

