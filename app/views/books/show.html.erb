  <%= form_with model: @book, url: books_path, method: :post do |f| %>
  <div>  
  <div class="form-group"><h4>Title</h4>
      <%= f.text_field :title %>
  </div>
  <div class="form-group"><h4>Opinion</h4>
      <%= f.text_area :body %>
  </div>
  <div class="form-group">
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
  </div>
  <% end %>
   </div>
   </div>
    
    <div class ="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		  <tr>
          <td><%= link_to  user_path(@books.user) do %><%= image_tag @books.user.get_profile_image(100,100) %><br>
          <%= @books.user.name %><% end %>
          </td>
          <td><%= link_to book_path(@books) do %>
          <%= @books.title %><% end %>
          </td>
          <td><%= @books.body %></td>
          <% if @books.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@books), class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to "Destroy", book_path(@books), method: :delete, class: 'btn btn-sm btn-danger',"data-confirm" => "Are you sureï¼Ÿ" %></td>
